{
    "global": {
        "environment": {
            "indexFileName": "index.js",
            "useStrict": "use strict;",
            "directories": {
                "src": {
                    "name": "src",
                    "files": [],
                    "templates": [
                        {
                            "name": "index.js",
                            "dest": "index.js"
                        }
                    ],
                    "directories": {
                        "controllers": {
                            "name": "controllers",
                            "files": [],
                            "templates": [
                                {
                                    "name": "controller.js",
                                    "dest": "index.js"
                                }
                            ]
                        },
                        "routes": {
                            "name": "routes",
                            "files": [],
                            "templates": [
                                {
                                    "name": "route.js",
                                    "dest": "index.js"
                                }
                            ]
                        },
                        "models": {
                            "name": "models",
                            "files": []
                        }
                    }
                }
            }
        },
        "commands": {
            "npm": "npm init --force > nul 2>&1",
            "git": "git init"
        },
        "installs": {
            "standard": {
                "options": "",
                "array": [
                    "morgan",
                    "dotenv",
                    "express",
                    "body-parser"
                ]
            },
            "devs": {
                "options": "--save-dev",
                "array": [
                    "nodemon",
                    "@types/express",
                    "@types/morgan",
                    "@types/dotenv",
                    "@types/body-parser"
                ]
            },
            "global": {
                "options": "-g",
                "array": []
            }
        }
    },
    "sequelize": {
        "installs": {
            "standard": {
                "options": "",
                "array": [
                    "mysql2",
                    "sequelize"
                ]
            },
            "devs": {
                "options": "--save-dev",
                "array": [
                    "@types/mysql",
                    "@types/sequelize"
                ]
            },
            "global": {
                "options": "-g",
                "array": [
                    "sequelize-cli"
                ]
            }
        },
        "environment": {
            "directories": {
                "src": {
                    "name": "src",
                    "directories": {
                        "models": {
                            "name": "models",
                            "files": [],
                            "templates": []
                        }
                    }
                }
            }
        }
    },
    "mongoose": {
        "installs": {
            "standard": {
                "options": "",
                "array": [
                    "mongoose"
                ]
            },
            "devs": {
                "options": "--save-dev",
                "array": [
                    "@types/mongoose"
                ]
            },
            "global": {
                "options": "-g",
                "array": []
            }
        },
        "environment": {
            "directories": {
                "src": {
                    "name": "src",
                    "directories": {
                        "models": {
                            "name": "models",
                            "files": [],
                            "templates": [
                                {
                                    "name": "model.js",
                                    "dest": "index.js"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
